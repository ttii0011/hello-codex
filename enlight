    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const pageLoadTime = Date.now();
            // Event Tracking Wrapper
            window.dataLayer = window.dataLayer || [];
            function track(name, params={}) {
              if (window.gtag) gtag('event', name, params);
              window.dataLayer.push({ event: name, ...params });
            }

            const body = document.body;
            let rafId = null;
            body.addEventListener('mousemove', (e) => {
                if (rafId) {
                    cancelAnimationFrame(rafId);
                }
                rafId = requestAnimationFrame(() => {
                    const { clientX, clientY } = e;
                    body.style.setProperty('--mouse-x', `${clientX}px`);
                    body.style.setProperty('--mouse-y', `${clientY}px`);
                });
            });
            
            // UTM Storage with TTL
            const utmParams = ['utm_source', 'utm_medium', 'utm_campaign'];
            const urlParams = new URLSearchParams(window.location.search);
            const TTL = 90*24*60*60*1000;
            const now = Date.now();
            
            utmParams.forEach(k => {
              if (urlParams.has(k)) {
                localStorage.setItem(k, JSON.stringify({v:urlParams.get(k), t:now}));
              }
              const raw = localStorage.getItem(k);
              if (raw) {
                try {
                    const {v,t} = JSON.parse(raw);
                    if (now - t > TTL) localStorage.removeItem(k);
                } catch(e) {
                    localStorage.removeItem(k);
                }
              }
            });
            
            // Video Lazy Load
            document.querySelectorAll('.video-placeholder').forEach(btn => {
                btn.addEventListener('click', () => {
                    track('video_start', { video_name: btn.getAttribute('aria-label') });
                    const url = btn.dataset.embed;
                    const iframe = document.createElement('iframe');
                    iframe.src = url;
                    iframe.title = '影片播放器';
                    iframe.loading = 'lazy';
                    iframe.allow = 'autoplay; encrypted-media; picture-in-picture';
                    iframe.setAttribute('allowfullscreen', '');
                    iframe.referrerPolicy = 'strict-origin-when-cross-origin';
                    iframe.style.width = '100%';
                    iframe.style.height = '100%';
                    iframe.style.border = '0';
                    btn.replaceWith(iframe);
                    iframe.focus();
                });
            });
            
            // Feature Tabs
            const tabCx = document.getElementById('tab-cx');
            const tabGuide = document.getElementById('tab-guide');
            const panelCx = document.getElementById('panel-cx');
            const panelGuide = document.getElementById('panel-guide');
            function activateTab(tab){
              const isCx = tab === 'cx';
              tabCx.classList.toggle('is-active', isCx);
              tabGuide.classList.toggle('is-active', !isCx);
              tabCx.setAttribute('aria-selected', isCx ? 'true' : 'false');
              tabGuide.setAttribute('aria-selected', !isCx ? 'true' : 'false');
              panelCx.hidden = !isCx; panelGuide.hidden = isCx;
              track('tab_switch',{ tab: isCx ? 'cx' : 'guide' });
            }
            tabCx?.addEventListener('click',()=>activateTab('cx'));
            tabGuide?.addEventListener('click',()=>activateTab('guide'));

            // Billing Toggle
            function renderPrices(mode){
              document.querySelectorAll('.plan-price').forEach(el=>{
                const m = Number(el.dataset.month || '0');
                const d = Number(el.dataset.discount || '0');
                let text = '';
                if (mode==='year') {
                  const yr = Math.round(m * 12 * (1 - d));
                  text = `$${yr.toLocaleString()}`
                } else {
                  text = `$${m.toLocaleString()}`
                }
                el.textContent = text + ' ';
                const unit = el.parentElement?.querySelector('.plan-unit');
                if (unit) unit.textContent = `USD / ${mode==='year' ? '年' : '月'}`;
              });
              const ann = document.getElementById('billing-announcer');
              if (ann) ann.textContent = mode==='year' ? '已切換為年付（省 15%）' : '已切換為月付';
              track('billing_toggle',{ cycle: mode });
            }

            const btnMonth = document.getElementById('bill-month');
            const btnYear = document.getElementById('bill-year');
            const mMonth = document.getElementById('m-bill-month');
            const mYear = document.getElementById('m-bill-year');

            function setCycle(mode){
              if(btnMonth) btnMonth.classList.toggle('is-active', mode==='month');
              if(btnYear) btnYear.classList.toggle('is-active', mode==='year');
              if(btnMonth) btnMonth.setAttribute('aria-pressed', mode==='month'?'true':'false');
              if(btnYear) btnYear.setAttribute('aria-pressed', mode==='year'?'true':'false');

              if(mMonth) mMonth.classList.toggle('is-active', mode==='month');
              if(mYear) mYear.classList.toggle('is-active', mode==='year');
              if(mMonth) mMonth.setAttribute('aria-pressed', mode==='month'?'true':'false');
              if(mYear) mYear.setAttribute('aria-pressed', mode==='year'?'true':'false');

              renderPrices(mode);
            }
            btnMonth?.addEventListener('click',()=>setCycle('month'));
            btnYear?.addEventListener('click',()=>setCycle('year'));
            mMonth?.addEventListener('click',()=>setCycle('month'));
            mYear?.addEventListener('click',()=>setCycle('year'));
            
            setCycle('month'); // Initial render

            const form = document.getElementById('lead-form');
            const formStatus = document.getElementById('form-status');
            const submitButton = form.querySelector('button[type="submit"]');

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                if (Date.now() - pageLoadTime < 3000) {
                    console.warn('Potential bot submission blocked.');
                    return;
                }
                
                // Form Validation
                let invalid = false;
                ['name','company','email'].forEach(id=>{
                  const el = document.getElementById(id);
                  const valid = el.checkValidity();
                  el.setAttribute('aria-invalid', valid ? 'false' : 'true');
                  if(!valid) invalid = true;
                });
                if(invalid) return;

                if (form.querySelector('.honeypot').value) return;

                utmParams.forEach(param => {
                    const input = form.querySelector(`input[name="${param}"]`);
                    if (input) {
                        const raw = localStorage.getItem(param);
                        if(raw) {
                            try { input.value = JSON.parse(raw).v || ''; } catch(e) {}
                        }
                    }
                });

                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                
                submitButton.disabled = true;
                submitButton.textContent = '傳送中...';
                formStatus.style.display = 'none';

                try {
                    const response = await fetch('https://api.example.com/lead', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data),
                    });
                    
                    if (!response.ok) {
                         await new Promise(resolve => setTimeout(resolve, 800));
                         throw new Error('Server responded with an error');
                    }
                    
                    track('generate_lead');
                    
                    formStatus.textContent = '感謝您！我們已收到您的訊息，將在 1 個工作天內與您聯繫。';
                    formStatus.className = 'form-status success';
                    form.reset();

                } catch (error) {
                    console.error('Form submission error:', error);
                    formStatus.textContent = '抱歉，訊息傳送失敗，請稍後再試或直接聯繫我們。';
                    formStatus.className = 'form-status error';
                } finally {
                    formStatus.style.display = 'block';
                    submitButton.disabled = false;
                    submitButton.textContent = '立即送出，預約評估';
                }
            });

            const sections = document.querySelectorAll('main section');
            const navLinks = document.querySelectorAll('header nav a');
            
            const observerOptions = { rootMargin: '-50% 0px -50% 0px' };
            const sectionObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.getAttribute('id');
                        navLinks.forEach(link => {
                            link.removeAttribute('aria-current');
                            if (link.getAttribute('href') === `#${id}`) {
                                link.setAttribute('aria-current', 'page');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => sectionObserver.observe(section));
        });
    </script>
</body>
</html>

